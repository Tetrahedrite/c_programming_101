{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build",
            "command": "/usr/bin/gcc",
            "args": [
                "-lm",
                "${file}",
                "-g",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}